<h2><%= @cocktail.name %></h2>

<div class="text-center padded">
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>

<% @cocktail.doses.each do |dose| %>

        <h4><%= dose.description %> <%= dose.ingredient.name %></h4>

      <% end %>
<%= render 'doses/index'%>
<%= render 'doses/new'%>
<%= link_to "return to list", cocktails_path, class: "btn btn-success" %>

</div>
